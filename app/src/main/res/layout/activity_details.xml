<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.detailsActivity.DetailsActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!-- things to scroll -->

            <ImageButton
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/back_button_details"
                android:src="@drawable/ic_left_arrow"
                android:scaleType="centerCrop"
                android:backgroundTint="@color/white"/>



            <ToggleButton
                android:id="@+id/heart_button"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="44dp"
                android:layout_marginRight="36dp"
                android:background="@drawable/ic_baseline_favorite_24"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:textOff=""
                android:textOn="" />
        </RelativeLayout>

        <TextView
            android:id="@+id/productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:fontFamily="@font/poppinsboldsemi"
            android:text="Yeezy Boost 350"
            android:textColor="@color/black"
            android:textSize="28sp" />


            <com.smarteist.autoimageslider.SliderView
                android:id="@+id/image_slider"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:clipToPadding="false"
                app:sliderAutoCycleEnabled="false"
                app:sliderIndicatorAnimationDuration="600"
                app:sliderIndicatorGravity="center_horizontal|bottom"
                app:sliderIndicatorOrientation="horizontal"
                app:sliderIndicatorPadding="3dp"
                app:sliderIndicatorRadius="2dp"
                app:sliderIndicatorSelectedColor="#797979"
                app:sliderIndicatorUnselectedColor="#D9D9D9"
                app:sliderScrollTimeInSec="2"
                app:sliderStartAutoCycle="false" />


            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_pirates"
                    android:layout_width="27dp"
                    android:layout_height="32dp"
                    android:buttonTint="@color/purple_200"
                    android:checked="true"
                    android:onClick="onRadioButtonClicked"
                    android:outlineAmbientShadowColor="@color/teal_200"
                    android:outlineSpotShadowColor="@color/purple_200" />

                <RadioButton
                    android:id="@+id/radio_ninjas"
                    android:layout_width="27dp"
                    android:layout_height="32dp"
                    android:buttonTint="@color/teal_200"
                    android:onClick="onRadioButtonClicked" />

                <RadioButton
                    android:id="@+id/radio_ninjass"
                    android:layout_width="27dp"
                    android:layout_height="32dp"
                    android:buttonTint="#616161"
                    android:onClick="onRadioButtonClicked" />
            </RadioGroup>

            <TextView
                android:id="@+id/currentColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="42dp"
                android:fontFamily="@font/poppins"
                android:text="Purple"
                android:textColor="#616161"
                android:textSize="16sp" />

        </LinearLayout>

    </ScrollView>



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="visible"
        app:itemBackground="@color/black"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"

        app:menu="@menu/menu_navigation"
        app:labelVisibilityMode="unlabeled" />

</RelativeLayout>