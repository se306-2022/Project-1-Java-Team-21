<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background">

    <LinearLayout android:layout_height="match_parent" android:orientation="vertical" android:layout_width="match_parent">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/sneaker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:layout_gravity="center_horizontal"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/sneaker" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sneaker Hub"
            android:textSize="40sp"
            android:gravity="center"
            android:fontFamily="@font/dyna"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>